<!DOCTYPE html>
<html>
<header></header><!-- /header -->
<p id="notice"></p>
	<h1>Books</h1>
	<body>
		<table>
			<thead >
			  <tr>
				<th>Title</th>
				<th>Body</th>
				<th colspan="3"></th>
			</tr>
			</thead>
			<tbody>
				<% @books.each do |book| %>
				<tr>
				<td><%= book.title %></td>
				<td><%= book.body %></td>
				<td><%= link_to "Show", book_path(book.id),style:"color:black"%></td>
				<td><%= link_to "Edit", edit_book_path(book.id),style:"color:black"%></td>
				<td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ",style:"color:black"%></td>
				</tr>
				<% end %>
				<br>
			</tbody>
		</table>
		<h2>New book</h2>
		<%= form_for (@book) do |f| %>
		<% if @book.errors.any? %>
		<div id="erorr_explanation" >
			<ul>
        <% @book.errors.full_messages.each do |message| %>
            <%= message %>
            <% end %>
    </ul>
</div>
<% end %>
		<label for="bookname">Title</label>
		<div class="input"><%= f.text_field :title %></div>
		<label for="bookname">Body</label>
		<div class="input"><%= f.text_area :body %></div>
		<%= f.submit 'create Book' %>
		<% end %>
	</body>
</html>